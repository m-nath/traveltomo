<div class="row mt-3">
  <% current_user.events.each do |event|%>
    <div class="col-xl-3 col-lg-4 col-md-4 col-md-6 col-sm-12">
      <div class="card-trip-home">
        <%= cl_image_tag(event.photo, width: 500, height: 400, crop: :fill) %>
        <div class="card-trip-infos">
          <div class="">
            <h4 class="tab-text-content mx-2"><%= link_to event.name, event_path(event), { :class=>"stretched-link" }  %></h4>
          </div>
        </div>
        <div class="mx-3">
          <p>Best View:  <%= event.date %></p>
          <!--           <%# event.tag_list.each do |tag| %>
            <%#= link_to '#'+tag, events_path(tag: tag), class: "tab-text-tag mx-1 px-1" %>
          <%# end %> -->
          <%= link_to event_path(event), method: :delete, data: { confirm: "Do you really want to delete the event?" } do %>
            <div class = "btn btn-main m-2">Delete</div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>