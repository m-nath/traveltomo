<div class="container">
  <%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :name, placeholder: 'Your event name' %>
      <%= f.input :description, placeholder: 'Something to describe your event' %>
      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}, placeholder:"Choose dates", label:false %>
      <%= f.input :location %>
      <%= f.input :tag_list %>
      <!--       <div class="container my-3 d-flex justify-content-between">
        <div
          id="map"
          style="width: 1110px;
          height: 250px;"
          data-markers="<%= @markers.to_json %>"
        ></div> -->
    </div>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :pictures, as: :file, input_html: { multiple: true } %>
  </div>
  <div class="form-actions d-flex justify-content-between">
    <%= f.button :submit, class: "btn btn-main" %>
    <%= link_to 'Back', root_path, class: "btn btn-secondery"%>
  </div>
<% end %>
</div>