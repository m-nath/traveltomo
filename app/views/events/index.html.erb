<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= image_path "banner.jpeg" %>');">
  <div class="d-flex flex-column mb-3">
    <div class="p-2 d-flex justify-content-center" style="
      margin-top: 100px;">
      <!-- <span id="banner-typed-text"></span> -->
      <h2>Make your travel experience unforgettable</h2>
    </div>
    <div class="p-2 d-flex justify-content-center">
      <form novalidate="novalidate" class="simple_form search  banner-search" action="/#result" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
        <div class="search-form-control form-group mb-4" style="width: 55vw;">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="e.g. Spring (season),   Meguro (location), etc..."/>
          <button name="button" type="submit" class="btn btn-search">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      </form>
      <div class="d-flex align-items-end justify-content-center" style="height: 75vh;">
      </div>
    </div>
  </div>
</div>
<div id="result"></div>
