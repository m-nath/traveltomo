<!-- banner start -->
<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @event.photo %>');">
  <div class="d-flex align-items-end justify-content-center" style="height: 60vh;">
    <h2 class="white banner-name"><%= @event.name %></h2>
    <p class="banner-p text-break">Best view: <%= @event.date %></p>
    <!--     <%#= cl_image_tag @event.user.photo, class: "avatar-extra-large" %> -->
  </div>
</div>
<!-- banner end -->
<!-- content start -->
<% if current_user == @event.user %>
  <%= render 'show_owner' %>
<% else %>
  <div class="d-flex justify-content-around">
    <div class="ml-4 mr-4">
      <p><%= @event.description %></p>
      <p>Address: <%= @event.location %></p>
      <p>Access: </p>
    </div>
    <div id="carouselExampleIndicators" class="carousel slide w-50 mr-4" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://res.cloudinary.com/dxouryvao/image/upload/v1568596660/Traveltomo/DSC06286-min_by88oz.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://res.cloudinary.com/dxouryvao/image/upload/v1568596653/Traveltomo/DSC04616-min_z8bjuc.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://res.cloudinary.com/dxouryvao/image/upload/v1568596666/Traveltomo/DSC06721-min_bznb8x.jpg" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
<% end %>